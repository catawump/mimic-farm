@using DefaultProject.Models


<!-- Determine Colors -->
@{
    string color = "unknown";
    @if(@ViewBag.currentMimic.color == 1){
        if (@ViewBag.currentMimic.species == "cyclops"){
            color = "steel";
        }
        else if (@ViewBag.currentMimic.species == "puppy"){
            color = "copper";
        }
        else if (@ViewBag.currentMimic.species == "spike"){
            color = "unknown";
        }
    }
    else if(@ViewBag.currentMimic.color == 2){
        if (@ViewBag.currentMimic.species == "cyclops"){
            color = "bronze";
        }
        else if (@ViewBag.currentMimic.species == "puppy"){
            color = "silver";
        }
        else if (@ViewBag.currentMimic.species == "spike"){
            color = "unknown";
        }
    }
    else if(@ViewBag.currentMimic.color == 3){
        if (@ViewBag.currentMimic.species == "cyclops"){
            color = "manganese";
        }
        else if (@ViewBag.currentMimic.species == "puppy"){
            color = "gold";
        }
        else if (@ViewBag.currentMimic.species == "spike"){
            color = "unknown";
        }
    }
}

<!-- Determine Age -->

@{
    string age = "egg.png";
    string ageText = "Egg";
    TimeSpan youth = new TimeSpan(24, 00, 0);
    TimeSpan adult = new TimeSpan(168, 00, 0);
    @if (DateTime.Now - @ViewBag.currentMimic.created_at >= youth && DateTime.Now - @ViewBag.currentMimic.created_at < adult){
            age = "youth.png";
            ageText = "Youth";
    }
    else if (DateTime.Now - @ViewBag.currentMimic.created_at >= adult){
            age = "adult.png";
            ageText = "Adult";
    }
}


<h2>@ViewBag.currentMimic.name has returned!</h2>

 <img src="~/images/mimics/@ViewBag.currentMimic.species/@ViewBag.currentMimic.color/@age" width="150px;"><br><br>

<p>@ViewBag.currentMimic.name has lost @ViewBag.lostHP health and @ViewBag.lostHunger hunger on the adventure.</p>

<p>Your mimic stole @ViewBag.gainedGold gold coins, @ViewBag.gainedFood food, and @ViewBag.gainedPotions health potions from unsuspecting travelers!</p>

<p>@ViewBag.special</p>

<p>@ViewBag.leveledUp</p>

<br>

@if(@ViewBag.currentMimic.hp > 0 && @ViewBag.currentMimic.hunger > 0){
<a href="/adventure/go/@ViewBag.currentMimic.id" class="btn btn-info">Adventure with @ViewBag.currentMimic.name Again!</a><br><br>
}

<a href="/adventure" class="btn btn-success">Back to Adventures</a>
<a href="/inventory" class="btn btn-primary">View Inventory</a>


        
